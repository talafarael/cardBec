{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@type/*": ["Type/*"]
    },

    "types": ["node", "ws", "jest"]
  },

"include": ["src/**/*", "Type/**/*"],

  "exclude": ["node_modules"]
}
