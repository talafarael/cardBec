{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node", "ws", "jest"]
  },

  "include": ["src/**/*.ts", "**/*","types"],

  "exclude": ["node_modules"]
}
